<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
        <item name="android:windowBackground">@color/bg_color</item>
    </style>


    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/bg_color</item>
    </style>


    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Light.ttf</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Italic.ttf</item>
    </style>

    <style name="TextAppearance.Text.PingFangRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/PingFang-SC/PingFang-SC-Regular.ttf</item>
    </style>


    <style name="TextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lightBlack</item>
    </style>


    <style name="TextStyle.ToolbarCustomTitle" parent="TextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>


    <style name="TextStyle.CustomPopUp" parent="TextStyle">
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_16dp</item>
    </style>

    <style name="TextStyle.ErrorTitle" parent="TextStyle">
        <item name="android:textColor">@color/grey_black_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/layout_measure</item>
    </style>

    <style name="TextStyle.ErrorReason" parent="TextStyle">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>


    <style name="TextStyle.RegularSize" parent="TextStyle">
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="TextStyle.MediumSize" parent="TextStyle">
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">@dimen/margin_6dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
    </style>


    <style name="TextStyle.RegularPingFang" parent="TextStyle">
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.PingFangRegular</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_16dp</item>
    </style>


    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>


    <style name="Button.Retry" parent="Button">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:background">@drawable/button_round_background</item>
        <item name="android:minWidth">@dimen/min_width_328dp</item>
    </style>


    <style name="TextStyle.Avatar" parent="TextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>



</resources>
